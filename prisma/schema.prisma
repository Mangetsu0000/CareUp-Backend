generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash String

  firstName  String?
  lastName String?

    drugs Drug[]

    @@map("users")
}

model Drug {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  price Int
  category String
  quantity Int

  userId Int
  user   User @relation(fields: [userId], references: [id])
  @@map("drugs")
}

